        app:cardsLayout_childList_distributeCardsBy="circle"
        app:cardsLayout_childList_width="200dp">

        <ImageView
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height"
            android:contentDescription="@null"
            android:src="@drawable/ic_card0" />

        <ImageView
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height"
            android:contentDescription="@null"
            android:src="@drawable/ic_card1" />

        <ImageView
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height"
            android:contentDescription="@null"
            android:src="@drawable/ic_card2" />

        <ImageView
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height"
            android:contentDescription="@null"
            android:src="@drawable/ic_card3" />

        <ImageView
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height"
            android:contentDescription="@null"
            android:src="@drawable/ic_card4" />

        <ImageView
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height"
            android:contentDescription="@null"
            android:src="@drawable/ic_card5" />

        <ImageView
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height"
            android:contentDescription="@null"
            android:src="@drawable/ic_card6" />

        <ImageView
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height"
            android:contentDescription="@null"
            android:src="@drawable/ic_card7" />
    </ua.jenshensoft.cardslayoutsample.CardsLayoutDefault>

</LinearLayout>