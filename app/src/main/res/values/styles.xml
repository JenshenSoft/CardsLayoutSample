<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget" />
    <!-- Card -->
    <style name="Widget.Card">
        <item name="card_elevation">@dimen/card_elevation_normal</item>
        <item name="card_elevation_pressed">@dimen/card_elevation_pressed</item>
    </style>

    <style name="Widget.Card.Vertical">
        <!-- cards layout params -->
        <item name="cardsLayout_widthForCalculation">@dimen/card_width</item>
        <item name="cardsLayout_heightForCalculation">@dimen/card_height</item>
    </style>

    <style name="Widget.Card.Horizontal">
        <!-- cards layout params -->
        <item name="cardsLayout_widthForCalculation">@dimen/card_height</item>
        <item name="cardsLayout_heightForCalculation">@dimen/card_width</item>
    </style>

    <!-- CardsLayout -->
    <style name="Widget.CardsLayout">
        <item name="cardsLayoutAV_firstBarViewClass">@string/userInfoBarClass</item>
    </style>

    <style name="Widget.CardsLayout.CurrentPlayer">
        <item name="cardsLayout_childList_distributeCardsBy">line</item>
        <item name="cardsLayoutAV_barsMargin">@dimen/offset_small1</item>
        <item name="cardsLayoutAV_distributeBars_byWidth">true</item>
        <item name="cardsLayoutAV_secondBarViewClass">@string/gameInfoBarClass</item>
        <!--bars-->
        <item name="cardsLayoutAV_secondBar_anchorGravity">top|center_horizontal</item>
        <item name="cardsLayoutAV_secondBar_anchorPosition">end</item>
        <item name="cardsLayoutAV_firstBar_anchorGravity">top|center_horizontal</item>
        <item name="cardsLayoutAV_firstBar_anchorPosition">start</item>
    </style>

    <style name="Widget.CardsLayout.OtherPlayer">
        <!-- circle -->
        <item name="cardsLayout_childList_distributeCardsBy">circle</item>
        <item name="cardsLayout_childList_circleCenterLocation">bottom</item>
        <item name="cardsLayout_childList_circleRadius">200dp</item>
        <item name="cardsLayoutAV_firstBar_anchorPosition">center</item>
        <item name="cardsLayoutAV_barsMargin">@dimen/childList_otherPlayersBarMargin</item>
    </style>

    <style name="Widget.CardsLayout.CurrentPlayer.Horizontal">
        <item name="cardsLayout_childList_orientation">horizontal</item>
    </style>

    <style name="Widget.CardsLayout.OtherPlayer.Horizontal">
        <item name="cardsLayout_childList_width">@dimen/childList_length</item>
        <item name="cardsLayout_childList_orientation">horizontal</item>
    </style>

    <style name="Widget.CardsLayout.OtherPlayer.Vertical">
        <item name="cardsLayout_childList_height">@dimen/childList_length</item>
        <item name="cardsLayout_childList_orientation">vertical</item>

    </style>

    <style name="Widget.TableLayout">
        <item name="gameTableLayout_cardValidatorTransition">true</item>
        <item name="gameTableLayout_cardValidatorSwipe">true</item>
        <item name="gameTableLayout_currentPlayerLayoutId">@+id/cardsOnTheHand_layout_0</item>
        <!--carddeck-->
        <item name="gameTableLayout_canAutoDistribute">true</item>
        <item name="gameTableLayout_cardDeckEnable">true</item>
        <item name="gameTableLayout_cardDeck_layoutGravity">center_horizontal|top</item>
        <item name="cardDeck_cardDeck_cardOffset_x">@dimen/cardsLayout_shadow_desk_offset</item>
        <item name="cardDeck_cardDeck_cardOffset_y">@dimen/cardsLayout_shadow_desk_offset</item>
        <item name="cardDeck_cardDeck_cardOffset_z">@dimen/cardsLayout_shadow_desk_offset</item>
        <!--<item name="layout_behavior">@string/tableLayoutBehavior</item>-->
    </style>

    <style name="Widget.CardDeckView">
        <item name="android:elevation" tools:ignore="NewApi">@dimen/cardsLayout_cardDeck_elevation</item>
        <item name="cardDeck_cardDeck_cardOffset_x">@dimen/cardsLayout_shadow_desk_offset</item>
        <item name="cardDeck_cardDeck_cardOffset_y">@dimen/cardsLayout_shadow_desk_offset</item>
        <item name="cardDeck_cardDeck_cardOffset_z">@dimen/cardsLayout_shadow_desk_offset</item>
        <item name="cardDeck_offsetBottom">@dimen/cardsLayout_cardDeck_offset</item>
        <item name="cardDeck_offsetLeft">@dimen/cardsLayout_cardDeck_offset</item>
        <item name="cardDeck_offsetRight">@dimen/cardsLayout_cardDeck_offset</item>
        <item name="cardDeck_offsetTop">@dimen/cardsLayout_cardDeck_offset</item>
    </style>
</resources>
