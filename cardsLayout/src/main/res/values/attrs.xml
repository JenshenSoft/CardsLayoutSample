<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="SwipeableLayout" tools:ignore="ResourceName">
        <attr name="card_elevation" format="dimension" />
        <attr name="card_elevation_pressed" format="dimension" />
        <attr name="card_speed" format="float" />
        <attr name="card_swipeOffset" format="float" />
        <attr name="card_swipeOrientation" format="enum">
            <enum name="leftToRight" value="0" />
            <enum name="bottomToUp" value="1" />
            <enum name="both" value="2" />
            <enum name="none" value="3" />
        </attr>
        <attr name="card_scrollAndClickable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CardsLayout_Params">
        <attr name="cardsLayout_cardsDirection" format="enum">
            <enum name="leftToRight" value="0" />
            <enum name="rightToLeft" value="1" />
        </attr>
        <attr name="cardsLayout_animationDuration" format="integer" />
        <attr name="cardsLayout_cardsGravity">
            <flag name="right" value="1" />
            <flag name="left" value="2" />
            <flag name="top" value="4" />
            <flag name="bottom" value="8" />
            <flag name="center" value="16" />
            <flag name="center_horizontal" value="32" />
            <flag name="center_vertical" value="64" />
        </attr>
        <attr name="cardsLayout_childList_orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="cardsLayout_childList_paddingLeft" format="dimension" />
        <attr name="cardsLayout_childList_paddingRight" format="dimension" />
        <attr name="cardsLayout_childList_paddingTop" format="dimension" />
        <attr name="cardsLayout_childList_paddingBottom" format="dimension" />
        <attr name="cardsLayout_childList_height" format="dimension" />
        <attr name="cardsLayout_childList_width" format="dimension" />
        <attr name="cardsLayout_tintColor" format="color" />
        <attr name="cardsLayout_childList_distributeCardsBy" format="enum">
            <enum name="line" value="0" />
            <enum name="circle" value="1" />
        </attr>
        <attr name="cardsLayout_childList_circleRadius" format="dimension" />
        <attr name="cardsLayout_childList_circleCenterLocation" format="enum">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
        </attr>
        <attr name="cardsLayout_fixedCardMeasure" format="boolean" />
        <attr name="cardsLayout_cardWidth" format="dimension" />
        <attr name="cardsLayout_cardHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CardsLayoutAV_Params" tools:ignore="ResourceName">
        <attr name="cardsLayoutAV_firstBar_anchorPosition" format="enum">
            <enum name="start" value="0" />
            <enum name="end" value="1" />
            <enum name="center" value="2" />
        </attr>
        <attr name="cardsLayoutAV_firstBar_anchorGravity">
            <flag name="right" value="1" />
            <flag name="left" value="2" />
            <flag name="top" value="4" />
            <flag name="bottom" value="8" />
            <flag name="center" value="16" />
            <flag name="center_horizontal" value="32" />
            <flag name="center_vertical" value="64" />
        </attr>
        <attr name="cardsLayoutAV_secondBar_anchorPosition" format="enum">
            <enum name="start" value="0" />
            <enum name="end" value="1" />
            <enum name="center" value="2" />
        </attr>
        <attr name="cardsLayoutAV_secondBar_anchorGravity">
            <flag name="right" value="1" />
            <flag name="left" value="2" />
            <flag name="top" value="4" />
            <flag name="bottom" value="8" />
            <flag name="center" value="16" />
            <flag name="center_horizontal" value="32" />
        </attr>
        <attr name="cardsLayoutAV_distributeBars_byWidth" format="boolean" />
        <attr name="cardsLayoutAV_distributeBars_byHeight" format="boolean" />
        <attr name="cardsLayoutAV_barsMargin" format="dimension" />
        <attr name="cardsLayoutAV_firstBarViewClass" format="string" />
        <attr name="cardsLayoutAV_secondBarViewClass" format="string" />
    </declare-styleable>

    <declare-styleable name="GameTableLayout_Params" tools:ignore="ResourceName">
        <attr name="gameTableLayout_deskOfCardsIcon" format="reference" />
        <attr name="gameTableLayout_currentPlayerLayoutId" format="integer" />
        <attr name="gameTableLayout_cardValidatorSwipe" format="boolean" />
        <attr name="gameTableLayout_cardValidatorTransition" format="boolean" />
        <attr name="gameTableLayout_duration_distributeAnimation" format="integer" />
        <!-- card deck -->
        <attr name="gameTableLayout_canAutoDistribute" format="boolean" />
        <attr name="gameTableLayout_cardDeckEnable" format="boolean" />
        <attr name="gameTableLayout_cardDeckGravity">
            <flag name="right" value="1" />
            <flag name="left" value="2" />
            <flag name="top" value="4" />
            <flag name="bottom" value="8" />
            <flag name="center" value="16" />
            <flag name="center_horizontal" value="32" />
            <flag name="center_vertical" value="64" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CardDeckView_Params" tools:ignore="ResourceName">
        <attr name="cardDeck_offsetLeft" format="dimension" />
        <attr name="cardDeck_offsetTop" format="dimension" />
        <attr name="cardDeck_offsetRight" format="dimension" />
        <attr name="cardDeck_offsetBottom" format="dimension" />
        <attr name="cardDeck_cardDeck_cardOffset_x" format="dimension" />
        <attr name="cardDeck_cardDeck_cardOffset_y" format="dimension" />
        <attr name="cardDeck_cardDeck_elevation_min" format="dimension" />
        <attr name="cardDeck_cardDeck_elevation_max" format="dimension" />
    </declare-styleable>
</resources>